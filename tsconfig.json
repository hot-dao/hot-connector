{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "alwaysStrict": true,
    "allowJs": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "resolveJsonModule": true
  },
  "include": ["./src"]
}
